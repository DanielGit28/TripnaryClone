<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_15sdp"
        app:cardBackgroundColor="@color/secondary"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_equipaje_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:fontFamily="@font/open_sans_medium"
        android:text="@string/lista_equipaje_item_title"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/card_language"
        app:layout_constraintStart_toStartOf="@+id/card_language"
        app:layout_constraintTop_toTopOf="@+id/card_language" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_circled_checkbox"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_language"
        app:layout_constraintEnd_toStartOf="@+id/btn_checkmark"
        app:layout_constraintTop_toTopOf="@+id/card_language" />

    <ImageView
        android:id="@+id/image_checkmark"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_checkmark_white"
        app:layout_constraintBottom_toBottomOf="@+id/card_circled_checkbox"
        app:layout_constraintEnd_toEndOf="@+id/card_circled_checkbox"
        app:layout_constraintStart_toStartOf="@+id/card_circled_checkbox"
        app:layout_constraintTop_toTopOf="@+id/card_circled_checkbox" />



    <ImageView
        android:id="@+id/btn_checkmark"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_20sdp"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/ic_dots"
        app:layout_constraintBottom_toBottomOf="@+id/card_language"
        app:layout_constraintEnd_toEndOf="@+id/card_language"
        app:layout_constraintTop_toTopOf="@+id/card_language" />



</androidx.constraintlayout.widget.ConstraintLayout>