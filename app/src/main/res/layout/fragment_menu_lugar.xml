<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lugares.menu.MenuLugarFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SteelBlue"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_lugar_toolbar_title"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/_15sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_link_menu_editar_lugar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:layout_marginTop="19dp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_left_icon_link_1"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_editar_lugar"
                app:layout_constraintStart_toStartOf="@+id/card_link_menu_editar_lugar"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_editar_lugar" />

            <ImageView
                android:id="@+id/image_left_icon_link_1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_pencil_black"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_1"
                app:layout_constraintEnd_toEndOf="@+id/card_left_icon_link_1"
                app:layout_constraintStart_toStartOf="@+id/card_left_icon_link_1"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_1"
                app:tint="@color/orange" />

            <TextView
                android:id="@+id/text_link_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="@string/menu_editar_lugar_title"
                android:textColor="@color/textHighContrast"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_1"
                app:layout_constraintStart_toEndOf="@+id/card_left_icon_link_1"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_1" />

            <ImageView
                android:id="@+id/image_right_icon_link_menu_viaje"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_chevron"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_editar_lugar"
                app:layout_constraintEnd_toEndOf="@+id/card_link_menu_editar_lugar"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_editar_lugar"
                app:tint="@color/textLowContrast" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_link_menu_agregar_notas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_link_menu_editar_lugar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_left_icon_link_2"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_agregar_notas"
                app:layout_constraintStart_toStartOf="@+id/card_link_menu_agregar_notas"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_agregar_notas" />


            <ImageView
                android:id="@+id/image_left_icon_link_2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_file_text_orange"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_2"
                app:layout_constraintEnd_toEndOf="@+id/card_left_icon_link_2"
                app:layout_constraintStart_toStartOf="@+id/card_left_icon_link_2"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_2"
                app:tint="@color/orange" />


            <TextView
                android:id="@+id/text_link_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="@string/menu_editar_notas_title"
                android:textColor="@color/textHighContrast"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_2"
                app:layout_constraintStart_toEndOf="@+id/card_left_icon_link_2"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_2" />


            <ImageView
                android:id="@+id/image_right_icon_link_notas"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_chevron"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_agregar_notas"
                app:layout_constraintEnd_toEndOf="@+id/card_link_menu_agregar_notas"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_agregar_notas"
                app:tint="@color/textLowContrast" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_link_menu_mapas_lugar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_link_menu_agregar_notas" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_left_icon_link_5"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_mapas_lugar"
                app:layout_constraintStart_toStartOf="@+id/card_link_menu_mapas_lugar"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_mapas_lugar" />


            <ImageView
                android:id="@+id/image_left_icon_link_5"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_travel"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_5"
                app:layout_constraintEnd_toEndOf="@+id/card_left_icon_link_5"
                app:layout_constraintStart_toStartOf="@+id/card_left_icon_link_5"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_5"
                app:tint="@color/orange" />


            <TextView
                android:id="@+id/text_link_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="@string/menu_mapa_lugar_title"
                android:textColor="@color/textHighContrast"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_5"
                app:layout_constraintStart_toEndOf="@+id/card_left_icon_link_5"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_5" />


            <ImageView
                android:id="@+id/image_right_icon_link_mapas_lugar"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_chevron"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_mapas_lugar"
                app:layout_constraintEnd_toEndOf="@+id/card_link_menu_mapas_lugar"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_mapas_lugar"
                app:tint="@color/textLowContrast" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_link_menu_eliminar_lugar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_link_menu_mapas_lugar" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_left_icon_link_4"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_eliminar_lugar"
                app:layout_constraintStart_toStartOf="@+id/card_link_menu_eliminar_lugar"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_eliminar_lugar" />


            <ImageView
                android:id="@+id/image_left_icon_link_4"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_4"
                app:layout_constraintEnd_toEndOf="@+id/card_left_icon_link_4"
                app:layout_constraintStart_toStartOf="@+id/card_left_icon_link_4"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_4"
                app:tint="@color/orange" />


            <TextView
                android:id="@+id/text_link_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="@string/menu_eliminar_lugar_title"
                android:textColor="@color/textHighContrast"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/card_left_icon_link_4"
                app:layout_constraintStart_toEndOf="@+id/card_left_icon_link_4"
                app:layout_constraintTop_toTopOf="@+id/card_left_icon_link_4" />


            <ImageView
                android:id="@+id/image_right_icon_link_eliminar_lugar"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_chevron"
                app:layout_constraintBottom_toBottomOf="@+id/card_link_menu_eliminar_lugar"
                app:layout_constraintEnd_toEndOf="@+id/card_link_menu_eliminar_lugar"
                app:layout_constraintTop_toTopOf="@+id/card_link_menu_eliminar_lugar"
                app:tint="@color/textLowContrast" />






        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>